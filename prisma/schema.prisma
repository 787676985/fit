generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ç”¨æˆ·è¡¨
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  name         String
  role         String   @default("user") // user, admin
  
  // å¥èº«æ•°æ®
  height       Float    @default(170)
  weight       Float    @default(70)
  targetWeight Float    @default(60)
  age          Int      @default(25)
  gender       String   @default("male")
  startDate    String   @default("")
  motivation   String   @default("")
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // å…³è”
  checkIns     CheckIn[]
  supervisors  Supervisor[]
  messages     Message[]
}

// æ‰“å¡è®°å½•è¡¨
model CheckIn {
  id        String   @id @default(cuid())
  userId    String
  date      String
  exercise  Boolean  @default(false)
  diet      Boolean  @default(false)
  water     Boolean  @default(false)
  sleep     Boolean  @default(false)
  weight    Float?
  note      String   @default("")
  mood      String   @default("good")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
}

// ç›‘ç£è€…è¡¨
model Supervisor {
  id           String   @id @default(cuid())
  userId       String   // è¢«ç›‘ç£çš„ç”¨æˆ·
  name         String
  relationship String
  avatar       String   @default("ğŸ‘¤")
  joinedDate   String
  lastViewDate String
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ç›‘ç£æ¶ˆæ¯è¡¨
model Message {
  id             String   @id @default(cuid())
  userId         String   // æ¥æ”¶æ¶ˆæ¯çš„ç”¨æˆ·
  supervisorId   String
  supervisorName String
  message        String
  type           String   // encourage, remind, celebrate
  
  createdAt      DateTime @default(now())
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
